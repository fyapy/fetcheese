{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "ES2017", 
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "esm",
    "cjs",
    "examples",
    "jest"
  ]
}